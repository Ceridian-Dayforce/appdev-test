<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title | Ceridian APPDEV Test</title>
	@Styles.Render("~/static/css")
	@Scripts.Render("~/static/modernizr")
</head>
<body>
	<header>
		<img class="ceridian-logo" src="~/Content/ceridian_wordmark_blue_footer.svg" />
	</header>
	<nav>
		@{
			var controller = ViewContext.RouteData.Values["controller"].ToString().ToLower();
			var links = new[] {
				new KeyValuePair<string, string>("Home", "Home"),
				new KeyValuePair<string, string>("UniqueChar", "Unique char finder"),
				new KeyValuePair<string, string>("MvcCalculator", "MVC Calculator"),
				new KeyValuePair<string, string>("SqlQueries", "SQL queries"),
				new KeyValuePair<string, string>("ProductRating", "Product Rating"),
			};
		}
		@foreach (var link in links)
		{
			@Html.ActionLink(link.Value, "Index", link.Key, null, new { @class = controller == link.Key.ToLower() ? "selected" : null })
		}
	</nav>
	<article>
		@RenderBody()
	</article>
	@Scripts.Render("~/static/jquery")
	@RenderSection("scripts", false)
</body>
</html>
